<configuration>

    <!-- Определение свойств -->
    <property name="LOG_FILE" value="logs/app.log"/>

    <!-- Консольный аппендер -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} host:%X{host} step:%X{step} method:%X{method} correlation_id:%X{correlation_id} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый аппендер -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} host:%X{host} step:%X{step} method:%X{method} correlation_id:%X{correlation_id} %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DB" class="sb.rabbitmq.logger.appender.QueueAppender">
        <table>backend_log</table>
        <active>true</active>
        <batchSize>1</batchSize>
        <scheduledCountSeconds>30</scheduledCountSeconds>
    </appender>

     Логирование уровня INFO и выше для всего приложения
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="RabbitMQLogger" level="debug" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

</configuration>